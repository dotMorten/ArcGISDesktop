<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///Esri.Calcite.WinUI/Styles/Fonts.xaml" />
        <ResourceDictionary Source="ms-appx:///Esri.Calcite.WinUI/Styles/Brushes.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{ThemeResource Background1}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="MinWidth" Value="64" />
        <Setter Property="MinHeight" Value="28" />
        <Setter Property="FontFamily" Value="{StaticResource AvenirNext-Regular}" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="AcceptsReturn" Value="True" />
        <!--<Setter Property="Cursor" Value="IBeam" />-->
        <Setter Property="TextWrapping" Value="Wrap" />
        <!--<Setter Property="CaretBrush" Value="{StaticResource TintNormal}" />-->
        <Setter Property="BorderBrush" Value="{ThemeResource Border2}" />
        <!--<Setter Property="Foreground" Value="{StaticResource Foreground1}" />-->
        <!--<Setter Property="SelectionBrush" Value="{StaticResource TintNormal}" />-->
    </Style>

</ResourceDictionary>