<Application
    x:Class="ArcGISRuntimeDesktop.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ArcGISRuntimeDesktop">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <CalciteControlsResources xmlns="using:Esri.Calcite.WinUI" />
                <ResourceDictionary Source="ms-appx:///ApplicationConfiguration.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <SolidColorBrush x:Key="FallbackBackgroundBrush" Color="#202020" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light" >
                    <SolidColorBrush x:Key="FallbackBackgroundBrush" Color="#eee" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
